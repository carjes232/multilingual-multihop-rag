# OpenRouter API configuration
# Copy to .env and fill in your key. Do NOT commit your .env.

OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Retriever backend (pgvector or pinecone)
# Defaults to pgvector when unset.
RETRIEVER_BACKEND=pgvector

# Embedding provider (local or pinecone)
# - local uses sentence-transformers (default: BAAI/bge-m3)
# - pinecone uses Pinecone Inference (default: multilingual-e5-large)
EMBEDDING_BACKEND=local
EMBEDDING_MODEL=BAAI/bge-m3

# Postgres (pgvector) configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ragdb
DB_USER=rag
DB_PASSWORD=rag

# Pinecone configuration
# Required when RETRIEVER_BACKEND=pinecone or EMBEDDING_BACKEND=pinecone
PINECONE_API_KEY=
PINECONE_INDEX=rag-chunks-e5-multilingual
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_NAMESPACE=rag

# Optional: max records per upsert (default: 96)
# Increase only if your Pinecone project/index allows larger batches
PINECONE_MAX_BATCH=96
